<script src="https://cdnjs.cloudflare.com/ajax/libs/smooth-scroll/16.1.3/smooth-scroll.min.js"></script>
<script>
  const scroll = new SmoothScroll('a[href*="#"]', {
    speed: 800, // Tốc độ cuộn (milisecond)
    speedAsDuration: true // Tính tốc độ cuộn làm dựa trên thời gian (true) hoặc số lượng pixel (false)
  });
var containerHome = document.querySelector('.container-home');
containerHome.addEventListener('scroll', scrollContent);

var firstItemSidebar = document.querySelector('.sidebar-list__items .sidebar-item a.first');
var secondItemSidebar = document.querySelector('.sidebar-list__items .sidebar-item a.second');
var thirdItemSidebar = document.querySelector('.sidebar-list__items .sidebar-item a.third');
var fourthItemSidebar = document.querySelector('.sidebar-list__items .sidebar-item a.fourth');
var fifthItemSidebar = document.querySelector('.sidebar-list__items .sidebar-item a.fifth');

function scrollContent() {
  var containerRect = containerHome.getBoundingClientRect();
  var containerHeight = (containerRect.height) - 10;
  var scrollPosition = containerHome.scrollTop;

  if (scrollPosition < containerHeight ) {
    firstItemSidebar.classList.add('active');
    secondItemSidebar.classList.remove('active');
  } else if (scrollPosition > containerHeight && scrollPosition <= 2 * containerHeight + 1) {
    firstItemSidebar.classList.remove('active');
    secondItemSidebar.classList.add('active');
    thirdItemSidebar.classList.remove('active');
    fourthItemSidebar.classList.remove('active');
    fifthItemSidebar.classList.remove('active');
  } else if (scrollPosition > 2 * containerHeight - 1 && scrollPosition <= 3 * containerHeight + 1) {
    firstItemSidebar.classList.remove('active');
    secondItemSidebar.classList.remove('active');
    thirdItemSidebar.classList.add('active');
    fourthItemSidebar.classList.remove('active');
    fifthItemSidebar.classList.remove('active');
  } else if (scrollPosition > 3 * containerHeight - 1 && scrollPosition <= 4 * containerHeight + 1) {
    firstItemSidebar.classList.remove('active');
    secondItemSidebar.classList.remove('active');
    thirdItemSidebar.classList.remove('active');
    fourthItemSidebar.classList.add('active');
    fifthItemSidebar.classList.remove('active');
  } else if (scrollPosition > 4 * containerHeight ) {
    firstItemSidebar.classList.remove('active');
    secondItemSidebar.classList.remove('active');
    thirdItemSidebar.classList.remove('active');
    fourthItemSidebar.classList.remove('active');
    fifthItemSidebar.classList.add('active');
  }
}
</script>


