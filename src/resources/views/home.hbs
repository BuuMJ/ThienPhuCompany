<script>
  const counters = document.querySelectorAll('.counter');
  const fadeElements = document.querySelectorAll('.fade-up');
  const categoryHome = document.querySelectorAll('.event .category');
  const animateCounter = (counter, duration = 1500) => {
    const target = +counter.getAttribute('data-target');
    const showPlus = counter.getAttribute('data-plus') === 'true';
    const startTime = performance.now();

    const update = (currentTime) => {
      const elapsed = currentTime - startTime;
      const progress = Math.min(elapsed / duration, 1);
      const value = Math.floor(progress * target);
      counter.textContent = showPlus ? `${value}+` : `${value}`;
      if (progress < 1) {
        requestAnimationFrame(update);
      } else {
        counter.textContent = showPlus ? `${target}+` : `${target}`;
      }
    };

    requestAnimationFrame(update);
  };

  const observer = new IntersectionObserver(entries => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('show');
        entry.target.querySelectorAll('.counter').forEach(c => animateCounter(c));
        observer.unobserve(entry.target);
      }
    });
  }, { threshold: 0.5 });
categoryHome.forEach(category =>{
  const newsEvent = category.getAttribute('data-category');
  if(newsEvent == "news"){
    category.textContent = 'Tin Tức';
  }else{
    category.textContent = 'Sự Kiện';
  }
})
  fadeElements.forEach(el => observer.observe(el));
</script>