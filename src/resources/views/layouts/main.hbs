<script>
  const backToTopBtn = document.getElementById("backToTop");
  window.addEventListener("scroll", () => {
    if (window.scrollY > 200) {
      backToTopBtn.classList.add("show");
    } else {
      backToTopBtn.classList.remove("show");
    }
  });
  backToTopBtn.addEventListener("click", () => {
    window.scrollTo({
      top: 0,
      behavior: "smooth"
    });
  });
const counters = document.querySelectorAll('.counter');
const fadeElements = document.querySelectorAll('.stat.fade-up');
const verifiedYear = 2002; 
const currentYear = new Date().getFullYear();
const resultYear = currentYear - verifiedYear;
const animateCounter = (counter, duration = 1500) => {
  // Nếu phần tử là "Năm thành lập" thì đổi target = resultYear
  const parent = counter.closest('.stat');
  let target = +counter.getAttribute('data-target');
  if (parent && parent.querySelector('p')?.textContent.includes('Năm thành lập')) {
    target = resultYear;
  }
  const showPlus = counter.getAttribute('data-plus') === 'true';
  const startTime = performance.now();
  const update = (currentTime) => {
    const elapsed = currentTime - startTime;
    const progress = Math.min(elapsed / duration, 1);
    const value = Math.floor(progress * target);
    counter.textContent = showPlus ? `${value}+` : `${value}`;
    if (progress < 1) {
      requestAnimationFrame(update);
    } else {
      counter.textContent = showPlus ? `${target}+` : `${target}`;
    }
  };
  requestAnimationFrame(update);
};
const observer = new IntersectionObserver(entries => {
  entries.forEach(entry => {
    if (entry.isIntersecting) {
      entry.target.classList.add('show');
      entry.target.querySelectorAll('.counter').forEach(c => animateCounter(c));
      observer.unobserve(entry.target);
    }
  });
}, { threshold: 0.5 });
fadeElements.forEach(el => observer.observe(el));

  document.addEventListener('DOMContentLoaded',()=>{
    const allIMG = document.querySelectorAll('img');
      allIMG.forEach(img=>{
        img.onerror = function() {
                this.src = '/img/error-img.jpg';
            };
      })
  })
  const navbar = document.querySelector('.navbar');
  const navbarResponsive = document.querySelector('.navbar-responsive');
  window.addEventListener('scroll', scrollNavbar)
  function scrollNavbar(){
      if(navbar){
        if(window.scrollY > 110){
        navbar.style.cssText = 'background-color: rgba(255,255,255,0.9); box-shadow: 1px 1px 10px rgba(0,0,0,.15);';
        }else{
          navbar.style.cssText = 'background-color: white; box-shadow: unset';
        }
      }
      if(navbarResponsive){
        if(window.scrollY > 110){
        navbarResponsive.style.cssText = 'background-color: rgba(255,255,255,0.9);';
        }else{
          navbarResponsive.style.cssText = 'background-color: white;';
        }
      }
  }
  const links = document.querySelectorAll('.navbar .navbar-inner .link');
  const linksResponsive = document.querySelectorAll('.navbar-responsive .link');
  links.forEach(link=>{
    link.addEventListener('click',(e)=>{
      if(link.classList.contains('touched')){
         if(link.classList.contains('event-header') || link.classList.contains('product-header')){
            
         }else{
            e.preventDefault();
         }

      }else{
        const href = link.getAttribute('data-href')
        localStorage.setItem('link',href)
      }
    })
  })
  //responsive navbar
  linksResponsive.forEach(link=>{
    link.addEventListener('click',(e)=>{
      if(link.classList.contains('touched-responsive')){
         if(link.classList.contains('event-header') || link.classList.contains('product-header')){
            
         }else{
            e.preventDefault();
         }
      }else{
        const href = link.getAttribute('data-href')
        localStorage.setItem('link',href)
      }
    })
  })
  document.addEventListener('DOMContentLoaded', () => {
    let currentURL = window.location.pathname
    if(currentURL.startsWith('/')){
      currentURL = currentURL.substring(1)
    }
    if(currentURL === ""){
      currentURL = "home"
    }
    localStorage.setItem('link', currentURL)
    const currentPage = localStorage.getItem('link');
    if(currentPage !== null){
      if(navbar){
      links.forEach(link=>{
        const href = link.getAttribute('data-href');
        if (href === currentPage || currentPage.includes('product') && href.includes('product') || currentPage.includes('event') && href.includes('event')){
          link.classList.add('touched')
        }else{
          link.classList.remove('touched')
        }
      })
      }
      //responsive navbar
      if(navbarResponsive){
        linksResponsive.forEach(link=>{
          const href = link.getAttribute('data-href');
          if (href === currentPage || currentPage.includes('product') && href.includes('product') || currentPage.includes('event') && href.includes('event')){
            link.classList.add('touched-responsive')
          }else{
            link.classList.remove('touched-responsive')
          }
        })
      }
    }
    const headerAdmin = document.querySelector('.container-header__admin');
    const showMenu = document.querySelector('img.show-menu');
    const hideMenu = document.querySelector('img.hide-menu');
    const actionMenu = document.querySelector('.container-header__admin .top-header');
    const textIndent = document.querySelectorAll('.text-indent');
    const tagA = document.querySelectorAll('.container-header__admin li a')
    const bodyRight = document.querySelector('.container-create .body-right');
    const bodyLeft = document.querySelector('.container-create .body-left');
    const profileHeaderUser = document.querySelector('.container-header__admin .bottom-navbar .profile-user');
    let checkClick = false;
    let fontSize;
    let widthNavAdmin;
    let widthOffNavAdmin;
    if(window.innerWidth < 769 && window.innerWidth > 601){
      fontSize = '15px';
      widthNavAdmin = '28%';
      widthOffNavAdmin = '14%';
    }else if(window.innerWidth < 601 && window.innerWidth > 416){
      fontSize = '13px';
      widthNavAdmin = '28%';
      widthOffNavAdmin = '14%';
    }else if(window.innerWidth < 415 && window.innerWidth > 321){
      fontSize = '11px';
      widthNavAdmin = '40%';
      widthOffNavAdmin = '16%';
    }else{
      fontSize = '9px';
      widthNavAdmin = '40%';
      widthOffNavAdmin = '16%';
    }
    if(window.innerWidth < 769){
        if(showMenu){
        actionMenu.addEventListener('click',()=>{
          if(!checkClick){
            checkClick = true;
            headerAdmin.style.width = `${widthNavAdmin}`;
            showMenu.style.cssText = 'display: none; opacity: 0';
            hideMenu.style.display = 'block';
            profileHeaderUser.style.gap = '10px';
            tagA.forEach(a=>{
              a.style.cssText = `justify-content: start; font-size: ${fontSize}`;
            })
            setTimeout(()=>{
              hideMenu.style.opacity = '1';
            },100)
            setTimeout(()=>{
              textIndent.forEach(text=>{
                text.style.cssText = `margin-left: 8px; opacity: 1; font-size: ${fontSize};`;
              })
            }, 100)
          }else{
            checkClick = false;
            headerAdmin.style.width = `${widthOffNavAdmin}`;
            hideMenu.style.cssText = 'display: none; opacity: 0';
            showMenu.style.display = 'block';
            profileHeaderUser.style.gap = '0px'
            textIndent.forEach(text=>{
                text.style.cssText = 'opacity: 0; font-size: 0; margin-left: unset;';
              })
            setTimeout(()=>{
              showMenu.style.opacity = '1';
            },100)
            setTimeout(()=>{
              tagA.forEach(a=>{
                a.style.cssText = 'justify-content: center;'
              })
            },300)
          }
        })
      }
    }
  })
  const body = document.querySelector('body');
  const loadingAll = document.querySelector('.spinnerContainer');
  window.addEventListener("beforeunload",()=> {
        loadingAll.style.display = 'flex';
        body.classList.add('modal-open');
  });
</script>
