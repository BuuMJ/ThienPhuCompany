<script>
  const allIMG = document.querySelectorAll('img');
  allIMG.forEach(img=>{
    img.onerror = function() {
            this.src = '/img/error-img.jpg';
        };
  })
  const navbar = document.querySelector('.navbar');
  const navbarResponsive = document.querySelector('.navbar-responsive');
  window.addEventListener('scroll', scrollNavbar)
  function scrollNavbar(){
      if(navbar){
        if(window.scrollY > 110){
        navbar.style.cssText = 'background-color: rgba(255,255,255,0.9); box-shadow: 1px 1px 10px rgba(0,0,0,.15);';
        }else{
          navbar.style.cssText = 'background-color: white; box-shadow: unset';
        }
      }
      if(navbarResponsive){
        if(window.scrollY > 110){
        navbarResponsive.style.cssText = 'background-color: rgba(255,255,255,0.9);';
        }else{
          navbarResponsive.style.cssText = 'background-color: white;';
        }
      }
  }
  const links = document.querySelectorAll('.navbar .navbar-inner .link');
  const linksResponsive = document.querySelectorAll('.navbar-responsive .link');
  links.forEach(link=>{
    link.addEventListener('click',(e)=>{
      if(link.classList.contains('touched')){
         if(link.classList.contains('event-header') || link.classList.contains('product-header')){
            
         }else{
            e.preventDefault();
         }

      }else{
        const href = link.getAttribute('data-href')
        localStorage.setItem('link',href)
      }
    })
  })
  //responsive navbar
  linksResponsive.forEach(link=>{
    link.addEventListener('click',(e)=>{
      if(link.classList.contains('touched-responsive')){
         if(link.classList.contains('event-header') || link.classList.contains('product-header')){
            
         }else{
            e.preventDefault();
         }
      }else{
        const href = link.getAttribute('data-href')
        localStorage.setItem('link',href)
      }
    })
  })
  document.addEventListener('DOMContentLoaded', () => {
    let currentURL = window.location.pathname
    if(currentURL.startsWith('/')){
      currentURL = currentURL.substring(1)
    }
    if(currentURL === ""){
      currentURL = "home"
    }
    localStorage.setItem('link', currentURL)
    const currentPage = localStorage.getItem('link');
    if(currentPage !== null){
      if(navbar){
      links.forEach(link=>{
        const href = link.getAttribute('data-href');
        if (href === currentPage || currentPage.includes('product') && href.includes('product') || currentPage.includes('event') && href.includes('event')){
          link.classList.add('touched')
        }else{
          link.classList.remove('touched')
        }
      })
      }
      //responsive navbar
      if(navbarResponsive){
        linksResponsive.forEach(link=>{
          const href = link.getAttribute('data-href');
          if (href === currentPage || currentPage.includes('product') && href.includes('product') || currentPage.includes('event') && href.includes('event')){
            link.classList.add('touched-responsive')
          }else{
            link.classList.remove('touched-responsive')
          }
        })
      }
    }
  })
</script>
